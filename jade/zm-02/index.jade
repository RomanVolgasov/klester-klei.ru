                  iframe.embed-responsive-item(width="560" height="315" src="https://www.youtube.com/embed/vg_84634BGY?rel=0&amp;controls=0&amp;showinfo=0" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen)

